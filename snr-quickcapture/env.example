# QuickCapture Environment Configuration

# Database Configuration
DATABASE_PATH=storage/quickcapture.db
VECTOR_STORE_PATH=storage/vector_store

# Semantic Processing
EMBEDDING_MODEL=all-MiniLM-L6-v2
SEMANTIC_DENSITY_THRESHOLD=0.3
MIN_SEMANTIC_COHERENCE=0.5

# Tag Intelligence
TAG_QUALITY_THRESHOLD=0.7
TAG_DRIFT_DETECTION_ENABLED=true
TAG_SUGGESTION_ENABLED=true

# Storage Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
JSONL_BACKUP_PATH=storage/backup/

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=INFO
LOG_FILE=storage/quickcapture.log

# Performance Tuning
MAX_CONCURRENT_OPERATIONS=10
BATCH_SIZE=100
CACHE_SIZE_MB=512

# Development
DEBUG_MODE=false
TEST_MODE=false 